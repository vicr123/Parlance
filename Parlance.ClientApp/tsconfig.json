{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "moduleResolution": "node",
    "module": "ES2022",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2023", "dom"],
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./*"]
    }
    //    "noImplicitAny": false
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["src", "vite/**/*.d.ts"]
}
